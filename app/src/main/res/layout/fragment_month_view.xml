<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:id="@+id/main_container">

    <TextView
        android:id="@+id/tvMonthHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JANUARY 2025"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/dard_grey"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/dard_grey"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/dard_grey"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="W"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/dard_grey"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/dard_grey"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="F"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/dard_grey"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/dard_grey"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/calendar_event_split_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="100">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridFullMonthDays"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:columnCount="7"
            android:layout_weight="70"
            android:padding="8dp"
            android:background="@android:color/white"
            app:orientation="horizontal" />
        <ImageView
            android:id="@+id/ivDragHandle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_drag_handle_normal"
            android:background="@android:color/white"
            android:contentDescription="Drag handle to switch view mode"
            android:clickable="true"
            android:focusable="true"/>
        <LinearLayout
            android:id="@+id/llEventArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Không gian hiển thị sự kiện"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="#AAAAAA"/>
            <!-- Các thành phần sự kiện sẽ được thêm vào đây -->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>