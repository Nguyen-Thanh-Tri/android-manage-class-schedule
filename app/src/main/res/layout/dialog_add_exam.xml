<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded">



    <EditText
        android:id="@+id/etExamSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:inputType="text" />

    <EditText
        android:id="@+id/etExamDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:focusable="false"
        android:inputType="none"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/etExamTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:focusable="false"
        android:inputType="none"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/etExamLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:inputType="text"
        android:layout_marginTop="12dp" />
    <Button
        android:id="@+id/btnSelectColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Color"
        app:backgroundTint="@null"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnSaveExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Exam"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FFA500"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnCancelExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="8dp"
        android:backgroundTint="#B0B0B0"
        android:textColor="#FFFFFF"/>

</LinearLayout>
